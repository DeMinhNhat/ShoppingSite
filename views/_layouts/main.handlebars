                            <li><a href="javascript:;" class="logout_btn">Đăng xuất</a>
                            </li>
                            {{else}}
                            <li><a href="#" data-toggle="modal" data-target="#login-modal">Đăng nhập</a>
                            </li>
                            <li><a href="/user/register">Đăng kí</a>
                            </li>
