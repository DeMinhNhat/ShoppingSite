                            </li>
                            <li><a href="#">Tạo tài khoản</a>
                            </li>
                        </ul>

                        <hr class="hidden-md hidden-lg hidden-sm">

                    </div>
                    <!-- /.col-md-3 -->

                    <div class="col-md-3 col-sm-6">

                        <h4>Danh mục</h4>

                        {{#each layoutVM.client_infos}}
