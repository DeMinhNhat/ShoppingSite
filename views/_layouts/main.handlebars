                    </div>
                    <!-- /.col-md-3 -->

                    <div class="col-md-3 col-sm-6">

                        <h4>Danh mục</h4>

                        {{#each layoutVM.client_infos}}
                        <h5>
                            <a href="/product/byCli/{{client.CliID}}">{{client.CliName}}</a>
                        </h5>

                        <ul>
                            {{#each cates}}
                            <li><a href="/product/byCat/{{CatID}}">{{CatName}}</a>
                            </li>
                            {{/each}}
                        </ul>
                        {{/each}}

                        <hr class="hidden-md hidden-lg">

                    </div>
                    <!-- /.col-md-3 -->

                    <div class="col-md-3 col-sm-6">

                        <h4>Thương hiệu</h4>

                        <ul>
                            {{#each layoutVM.brands}}
