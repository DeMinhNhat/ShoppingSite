{{#section 'title'}}SSG Shoppin{{/section}}

<div id="content">

	<div class="container">
		<div class="col-md-12">
			<div id="main-slider">
				<div class="item">
					<img src="/imgs/icons/main-sliders/main-slider1.jpg" alt="" class="img-responsive">
				</div>
				<div class="item">
					<img class="img-responsive" src="/imgs/icons/main-sliders/main-slider2.jpg" alt="">
				</div>
				<div class="item">
					<img class="img-responsive" src="/imgs/icons/main-sliders/main-slider3.jpg" alt="">
				</div>
				<div class="item">
					<img class="img-responsive" src="/imgs/icons/main-sliders/main-slider4.jpg" alt="">
				</div>
			</div>
			<!-- /#main-slider -->
		</div>
	</div>

	<!-- *** NEWEST PRODUCT SLIDESHOW *** -->
	<div class="product-show">

		<div class="box">
			<div class="container">
				<div class="col-md-12">
					<h2>Hot</h2>
				</div>
			</div>
		</div>

		<div class="container">
			<div class="product-slider">

				{{#each newest}}
				<div class="item">
					<div class="product">
						<div class="flip-container">
							<div class="flipper">
								<div class="front">
									<a href="/product/detail/{{ProID}}">
										<img src="/imgs/products/{{ProID}}/1.jpg" alt="" class="img-responsive">
									</a>
								</div>
								<div class="back">
									<a href="/product/detail/{{ProID}}">
										<img src="/imgs/products/{{ProID}}/2.jpg" alt="" class="img-responsive">
									</a>
								</div>
							</div>
						</div>
						<a href="/product/detail/{{ProID}}" class="invisible">
							<img src="/imgs/products/{{ProID}}/2.jpg" alt="" class="img-responsive">
						</a>
						<div class="text">
							<h3><a href="/product/detail/{{ProID}}">{{ProName}}</a></h3>
							{{#if SaleOff}}
							<p class="price"><del>{{number_format Price}}</del> {{number_format Price}}</p>
							{{else}}
							<p class="price">{{number_format Price}}</p>
							{{/if}}

							{{#if ../layoutVM.isLogged}}
							<form method="post" action="/cart/add">
								<input type="hidden" value="{{ProID}}" name="proId">
								<input type="hidden" value="1" name="quantity">
								<p class="text-center buttons">
									<button type="submit" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ :)</button> 
								</p>
							</form>
							{{else}}
							<p class="text-center buttons">
								<a href="#" data-toggle="modal" data-target="#login-modal" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ :)</a> 
							</p>
							{{/if}}

						</div>
						<!-- /.text -->

					</div>
					<!-- /.product -->
				</div>
				{{/each}}

			</div>
			<!-- /.product-slider -->
		</div>
		<!-- /.container -->
	</div>

